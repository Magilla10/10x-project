---
import Layout from "./Layout.astro";

interface Props {
  title?: string;
  subtitle?: string;
}

const { title = "10xDevs", subtitle } = Astro.props as Props;
---

<Layout title={title}>
  <main class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50 dark:from-slate-950 dark:via-slate-900 dark:to-indigo-950">
    <div class="flex min-h-screen flex-col items-center justify-center px-4 py-16">
      <div class="mx-auto flex w-full max-w-6xl flex-col items-center gap-12">
        <header class="text-center space-y-3">
          <h1 class="text-3xl font-semibold tracking-tight text-slate-900 dark:text-white sm:text-4xl">
            {title}
          </h1>
          {subtitle ? (
            <p class="text-base text-slate-600 dark:text-slate-300">{subtitle}</p>
          ) : null}
        </header>
        <slot />
      </div>
    </div>
  </main>
</Layout>
