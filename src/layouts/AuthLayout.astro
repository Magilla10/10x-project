---
import Layout from "./Layout.astro";

interface Props {
  title?: string;
  subtitle?: string;
  hideAuthButtons?: boolean;
}

const { title = "10xDevs", subtitle, hideAuthButtons = false } = Astro.props as Props;
---

<Layout title={title} hideAuthButtons={hideAuthButtons}>
  <main class="min-h-screen bg-gradient-to-br from-indigo-950 via-slate-950 to-blue-900">
    <div class="flex min-h-screen flex-col items-center justify-center px-4 py-16">
      <div class="mx-auto flex w-full max-w-6xl flex-col items-center gap-12">
        <header class="text-center space-y-3">
          <h1 class="text-3xl font-semibold tracking-tight text-white sm:text-4xl">
            {title}
          </h1>
          {subtitle ? <p class="text-base text-white/80">{subtitle}</p> : null}
        </header>
        <slot />
      </div>
    </div>
  </main>
</Layout>
