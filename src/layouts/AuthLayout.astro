---
import Layout from "./Layout.astro";

interface Props {
  title?: string;
  subtitle?: string;
  hideAuthButtons?: boolean;
}

const { title = "10xDevs", subtitle, hideAuthButtons = false } = Astro.props as Props;
---

<Layout title={title} hideAuthButtons={hideAuthButtons}>
  <main class="relative min-h-screen overflow-hidden bg-gradient-to-br from-[#120024] via-[#081132] to-[#001f34]">
    <div class="pointer-events-none absolute inset-0 -z-10">
      <div
        class="absolute left-1/2 top-[-18%] h-72 w-72 -translate-x-1/2 rounded-full bg-[#ff3ecf33] blur-3xl"
        aria-hidden="true"
      >
      </div>
      <div
        class="absolute bottom-[-22%] right-[12%] h-80 w-80 rounded-full bg-[#27e0ff33] blur-[120px]"
        aria-hidden="true"
      >
      </div>
      <div class="absolute bottom-[8%] left-[6%] h-64 w-64 rounded-full bg-[#7c3aed2e] blur-[140px]" aria-hidden="true">
      </div>
    </div>
    <div class="relative flex min-h-screen flex-col items-center justify-center px-4 py-16">
      <div class="mx-auto flex w-full max-w-6xl flex-col items-center gap-12">
        <header class="space-y-3 text-center">
          <h1
            class="bg-gradient-to-r from-purple-100 via-white to-cyan-100 bg-clip-text text-3xl font-semibold tracking-tight text-transparent sm:text-4xl"
          >
            {title}
          </h1>
          {subtitle ? <p class="text-base text-white/80">{subtitle}</p> : null}
        </header>
        <slot />
      </div>
    </div>
  </main>
</Layout>
