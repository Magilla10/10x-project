---
import "../styles/global.css";
import { AuthStatus } from "@/components/auth/AuthStatus";

interface Props {
  title?: string;
  hideAuthButtons?: boolean;
}

const { title = "Åšwiat fiszek", hideAuthButtons = false } = Astro.props as Props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="flex min-h-screen flex-col">
      <header class="border-b border-white/10 bg-white/10 backdrop-blur-xl">
        <div class="mx-auto flex w-full max-w-6xl items-center justify-between px-6 py-4">
          <a
            href="/"
            class="bg-gradient-to-r from-purple-200 via-white to-cyan-200 bg-clip-text text-lg font-semibold tracking-tight text-transparent"
          >
            10xDevs
          </a>
          {!hideAuthButtons && <AuthStatus client:load />}
        </div>
      </header>
      <main class="flex-1">
        <slot />
      </main>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
