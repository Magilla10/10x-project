---
import AuthLayout from "../layouts/AuthLayout.astro";
import { ResetPasswordForm } from "@/components/auth/ResetPasswordForm";
import { extractRecoveryTokenFromHash } from "@/lib/auth/recovery";

const token =
  Astro.url.searchParams.get("token") ??
  Astro.url.searchParams.get("code") ??
  extractRecoveryTokenFromHash(Astro.url.hash) ??
  undefined;
---

<AuthLayout
  title="Ustaw nowe hasło"
  subtitle="Zadbaj o bezpieczeństwo swojego konta i ustaw mocne hasło"
>
  <section class="grid w-full gap-8 lg:grid-cols-[1fr_1fr]">
    <div class="flex w-full justify-center">
      <ResetPasswordForm client:load className="w-full" token={token} />
    </div>

    <aside class="hidden flex-col gap-6 rounded-3xl border bg-white/70 p-10 text-slate-900 shadow-xl backdrop-blur-xl dark:border-white/10 dark:bg-white/10 dark:text-white lg:flex">
      <h2 class="text-2xl font-semibold tracking-tight">Wskazówki bezpieczeństwa</h2>
      <ul class="space-y-4 text-sm leading-relaxed text-slate-700 dark:text-slate-200">
        <li>
          <span class="font-semibold">•</span> Używaj minimum 8 znaków, w tym cyfr i znaków specjalnych.
        </li>
        <li>
          <span class="font-semibold">•</span> Nie używaj tego samego hasła w wielu serwisach.
        </li>
        <li>
          <span class="font-semibold">•</span> Regularnie aktualizuj hasło i wykorzystuj menedżer haseł.
        </li>
      </ul>
    </aside>
  </section>
</AuthLayout>
