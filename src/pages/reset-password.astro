---
import AuthLayout from "../layouts/AuthLayout.astro";
import { ResetPasswordForm } from "@/components/auth/ResetPasswordForm";
import { extractRecoveryTokenFromHash } from "@/lib/auth/recovery";

const token =
  Astro.url.searchParams.get("token") ??
  Astro.url.searchParams.get("code") ??
  extractRecoveryTokenFromHash(Astro.url.hash) ??
  undefined;
---

<AuthLayout title="Ustaw nowe hasło" subtitle="Zadbaj o bezpieczeństwo swojego konta i ustaw mocne hasło">
  <section class="grid w-full gap-8 lg:grid-cols-[1fr_1fr]">
    <div class="flex w-full justify-center">
      <ResetPasswordForm client:load className="w-full" token={token} />
    </div>

    <aside
      class="hidden flex-col gap-6 rounded-3xl border border-white/15 bg-gradient-to-br from-white/10 via-purple-400/10 to-transparent p-10 text-white shadow-[0_35px_110px_-60px_rgba(56,189,248,0.8)] backdrop-blur-2xl lg:flex"
    >
      <h2
        class="bg-gradient-to-r from-purple-100 via-white to-cyan-100 bg-clip-text text-2xl font-semibold tracking-tight text-transparent"
      >
        Wskazówki bezpieczeństwa
      </h2>
      <ul class="space-y-4 text-sm leading-relaxed text-white/75">
        <li>
          <span class="font-semibold text-fuchsia-200">•</span> Używaj minimum 8 znaków, w tym cyfr i znaków specjalnych.
        </li>
        <li>
          <span class="font-semibold text-fuchsia-200">•</span> Nie używaj tego samego hasła w wielu serwisach.
        </li>
        <li>
          <span class="font-semibold text-fuchsia-200">•</span> Regularnie aktualizuj hasło i wykorzystuj menedżer haseł.
        </li>
      </ul>
    </aside>
  </section>
</AuthLayout>
