---
import Layout from "../layouts/Layout.astro";
import { FlashcardsList } from "../components/flashcards/FlashcardsList";

export const prerender = false;
---

<Layout title="Moje fiszki">
  <div
    class="relative isolate min-h-screen overflow-hidden bg-gradient-to-br from-[#120024] via-[#081132] to-[#001f34] text-white"
  >
    <div class="pointer-events-none absolute inset-0 -z-10">
      <div
        class="absolute left-1/2 top-[-20%] h-[420px] w-[420px] -translate-x-1/2 rounded-full bg-[#ff3ecf33] blur-3xl"
      >
      </div>
      <div class="absolute bottom-[-25%] right-[10%] h-[520px] w-[520px] rounded-full bg-[#27e0ff33] blur-3xl"></div>
      <div class="absolute bottom-[5%] left-[-12%] h-[360px] w-[360px] rounded-full bg-[#7c3aed2e] blur-[140px]">
      </div>
    </div>

    <div class="relative mx-auto flex w-full max-w-6xl flex-col gap-12 px-4 pb-20 pt-16 md:px-8 lg:gap-16">
      <header class="space-y-8 text-center text-white md:text-left">
        <div
          class="inline-flex items-center justify-center gap-2 rounded-full border border-white/15 bg-white/10 px-4 py-1 text-xs font-semibold uppercase tracking-[0.28em] text-fuchsia-100/90 shadow-[0_0_40px_rgba(236,72,153,0.25)] md:justify-start"
        >
          <span class="size-2 rounded-full bg-[#ff3ecf] shadow-[0_0_0_6px_rgba(255,62,207,0.25)]" aria-hidden="true"
          ></span>
          Tryb przeglądania
        </div>

        <div class="space-y-4">
          <h1 class="bg-gradient-to-r from-purple-100 via-white to-cyan-100 bg-clip-text text-4xl font-semibold tracking-tight text-transparent sm:text-5xl">Moje fiszki</h1>
          <p class="mx-auto max-w-3xl text-base text-white/75 md:text-lg md:leading-relaxed md:text-white/80 lg:mx-0">
            Przeglądaj swoją kolekcję fiszek. Edytuj, usuwaj lub dodawaj nowe karty, aby optymalizować naukę.
          </p>
        </div>

        <div class="flex justify-center md:justify-start">
          <a
            href="/generate"
            class="inline-flex items-center justify-center rounded-full bg-gradient-to-r from-[#ff3ecf] via-[#fe6cb6] to-[#27e0ff] px-8 py-4 text-lg font-semibold text-white shadow-[0_18px_60px_-28px_rgba(236,72,153,0.9)] transition-transform duration-300 hover:scale-105"
          >
            Dodaj nowe fiszki
          </a>
        </div>
      </header>

      <FlashcardsList client:load />
    </div>
  </div>
</Layout>
