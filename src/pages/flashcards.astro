---
import Layout from "../layouts/Layout.astro";
import { FlashcardsList } from "../components/flashcards/FlashcardsList";

export const prerender = false;
---

<Layout title="Moje fiszki">
  <div class="bg-background min-h-screen">
    <div class="container mx-auto max-w-5xl px-4 py-10">
      <header class="mb-8">
        <h1 class="text-3xl font-bold tracking-tight">Moje fiszki</h1>
        <p class="text-muted-foreground mt-2 text-sm">
          Przeglądaj, edytuj i usuwaj własne fiszki. Dodawaj nowe w sekcji generowania.
        </p>
      </header>

      <FlashcardsList client:load />
    </div>
  </div>
</Layout>






